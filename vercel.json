{
  "rewrites": [
    {
      "source": "/pol360/:path*",
      "destination": "https://web09.pol360.co.za/:path*"
    }
  ],
  "headers": [
    {
      "source": "/pol360/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Authorization, X-Authorization-Token, Content-Type, Accept"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Authorization, X-Authorization-Token"
        }
      ]
    }
  ]
}
