{
  "rewrites": [
    {
      "source": "/pol360/:path*",
      "destination": "https://web09.pol360.co.za/:path*"
    }
  ],
  "headers": [
    {
      "source": "/pol360/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Authorization, X-Authorization-Token, Content-Type, Accept, X-Requested-With"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Authorization, X-Authorization-Token"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ]
}
