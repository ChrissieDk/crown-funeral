{
  "rewrites": [
    {
      "source": "/pol360/api/:path*",
      "destination": "https://web09.pol360.co.za/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/pol360/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Authorization, x-authorization-token, Content-Type, Accept"
        }
      ]
    }
  ]
}
