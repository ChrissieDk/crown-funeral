{
  "rewrites": [
    {
      "source": "/pol360/:path*",
      "destination": "https://web09.pol360.co.za/:path*"
    }
  ],
  "headers": [
    {
      "source": "/pol360/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "authorization, x-authorization-token, content-type, accept"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "authorization"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/pol360/(.*)",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "authorization, x-authorization-token, content-type, accept",
        "Access-Control-Max-Age": "86400"
      },
      "status": 204
    }
  ]
}
